<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
	parent="%core.module_dir%/News/config/validators.xml"
>
	
	<ae:configuration>
		
		<validators method="write">
			<validator class="string">
				<arguments>
					<argument>name</argument>
				</arguments>
			</validator>
			
						
			<validator class="string">
				<arguments>
					<argument>short_desc</argument>
				</arguments>
			</validator>
			
			<validator class="equals" required="false">
    			<argument>is_desc</argument>
    			<ae:parameter name="value">1</ae:parameter>
			</validator>
			
						
			<validator class="string">
				<arguments>
					<argument>prio</argument>
				</arguments>
			</validator>
			
			<validator class="string">
				<arguments>
					<argument>desc</argument>
				</arguments>
				<ae:parameters>
         			 <ae:parameter name="required">false</ae:parameter>
          		</ae:parameters>
			</validator>
			<validator class="string">
				<arguments>
					<argument>category</argument>
				</arguments>
				<ae:parameters>
         			 <ae:parameter name="required">false</ae:parameter>
          		</ae:parameters>
			</validator>
	

			
			
			
			
		</validators>
		
	</ae:configuration>
	
</ae:configurations>